<% layout("/layouts/boilerplate")%>
 <div class="row">
<h1 class="col-6 offset-3">signup on wanderlust</h1>
    <div class="col-6 offset-3">
                <form method="post" action="/signup" class="needs-validation" novalidate>
                     <div>   
                 <label for="username" class="form-label"  >username</label>
            <input name="username" id="username" class="form-control" type="text"required>
                <div class="valid-feedback"> looks good</div>
                <div class="invalid-feedback">username is required</div>

            </div>
                       <div>   
                 <label for="email" class="form-label"  >email</label>
            <input name="email" id="email" class="form-control" type="email"required>
              

            </div>
                       <div>   
                 <label for="password" class="form-label"  >password</label>
            <input name="password" id="password" class="form-control" type="password"required>
               

            </div><br>
            <button class="btn btn-success">signup</button>
                </form>
</div>
</div>
