<% layout("/layouts/boilerplate")%>

    <body>
        <br><br>
        <h3 class="offset-2">create a new listing</h3>
        <div class="row">
            <div class="col-8 offset-2">

          
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div>   
                 <label for="title" class="form-label"  >title</label>
            <input name="title" class="form-control" placeholder="add a catchy title"type="text"required>
                <div class="valid-feedback">title looks good</div>
                <div class="invalid-feedback">title is required</div>

            </div>
           <div>
                 <label for="description" class="form-label">description</label>
                <textarea name="description" class="form-control" type="text" placeholder="enter description" required ></textarea>
                <div class="invalid-feedback">please enter a short description</div>

            </div>
           <div>
              <label for="image" class="form-label">Upload listing image</label>
<input name="image" type="file" class="form-control" >

            </div>
           <div class="row">
                <div class="col-md-4">    
                    <label for="price" class="form-label " >price</label>
                    <input name="price" placeholder="1200" class="form-control" required>
                <div class="invalid-feedback">price should be valid</div>

                </div>
                <div class="col-md-8" >
                    <label for="country" class="form-label ">country</label>
                    <input name="country" placeholder="india"class="form-control" type="text" required >
                <div class="invalid-feedback">country name should be valid</div>

                </div> 
            </div>
            <div class="mb-3 mt-1">
  <label for="category" class="form-label">Category</label>
  <select class="form-control" id="category" name="category" required>
    <option value="rooms">Rooms</option>
    <option value="Iconic Cities">Iconic Cities</option>
    <option value="mountain">Mountain</option>
    <option value="Castles">Castles</option>
    <option value="Artic">Arctic</option>
    <option value="camping">Camping</option>
    <option value="farms">Farms</option>
    <option value="snow">Snow</option>
    <option value="snow">fun</option>

  </select>
</div>
           
           <div>
                <label for="location" class="form-label">location</label>
                <input name="location" placeholder="banglore,karnataka" class="form-control"type="text" required novalidate>
                <div class="invalid-feedback">location should be valid</div>


            </div><br>
                 
            <button class="btn btn-dark add-btn">add</button><br><br>
                



        </form>
          </div>
        </div>
    </body>